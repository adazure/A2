extends _layout

block content
        div#personal-container
                div.personal.template.context.row
                        div.personal.col-md-4
                                div.personal.image.animated.flipInY: img(src=result.image)
                                div.personal.name: span #{result.name}
                                div.personal.title: span #{result.title}
                                div.personal.degree: span #{result.degree}
                                div.personal.social
                                        a: i.fa.fa-facebook-official(aria-hidden="true")
                                        a: i.fa.fa-twitter(aria-hidden="true")
                                        a: i.fa.fa-instagram(aria-hidden="true")
                                        a: i.fa.fa-google-plus(aria-hidden="true")
                        
                        div.personal.description.col-md-8
                                h1.title About
                                div !{result.description}
                                hr
                                div.rewards
                                        h1.title Awards
                                        ul.awards
                                                each item in result.awards
                                                        li= item 